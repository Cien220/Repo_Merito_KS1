def testSrtingu(s):

    d = {"UPPER_CASE": 0, "LOWER_CASE": 0}
    
    for c in s:

        if c.isupper():

            d["UPPER_CASE"] += 1

        elif c.islower():

            d["LOWER_CASE"] += 1

        else:

            pass
    
    print("Orginalny string: ", s)
    
    print("Liczba dużych liter: ", d["UPPER_CASE"])
    
    print("Liczba małych liter: ", d["LOWER_CASE"])

testSrtingu('Adam pogromca Koparek zaklinacz Drukarek') 

"""Write a Python function that accepts a string and counts the number of upper and lower case letters."""