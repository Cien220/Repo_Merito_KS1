def BigWord(wrdList):

    wrdLen = []
    for n in wrdLen:
        wrdLen.append((len(n), n))
    wrdLen.sort()
    return wrdLen[-1][0], wrdLen[-1][1]

result = BigWord(["Rcg", "Restricted", "Commodities"])

print("\nDŁUGIE słowo: ", result[1])
print("Długość najdłuższego słowa: ", result[0])

