import random
import math

lower = int(input("Podaj dolną granicę:- "))

upper = int(input("Podaj górną granicę:- "))

x = random.randint(lower, upper)

print("\n\tIlość prób na zgadnięcie liczby: ", 
	round(math.log(upper - lower + 1, 2)), "\n")

count = 0

while count < math.log(upper - lower + 1, 2):
	count += 1

	guess = int(input("Zgadnij cyfrę:- "))

	if x == guess:
		print("Gratulacje, udało ci się po ",
			count, " próbach")
		break
	
	elif x > guess:
		print("Zgaduj wyżej!")
	elif x < guess:
		print("Zgaduj niżej!")

if count >= math.log(upper - lower + 1, 2):
	print("\nWylosowaną cyfrą jest %d" % x)
	print("\tPowodzenia następnym razem!")